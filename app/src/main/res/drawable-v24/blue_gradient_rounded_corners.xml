<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <gradient
                android:startColor="@color/BlueGradientStart50opacity"
                android:centerColor="@color/BlueGradientMiddle50opacity"
                android:endColor="@color/BlueGradientEnd50opacity"
                android:angle="0"/>
            <corners android:radius="60dp"/>
            <padding android:left="0dp" android:top="0dp" android:right="0dp" android:bottom="0dp" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape>
            <gradient
                android:startColor="@color/BlueGradientStart"
                android:centerColor="@color/BlueGradientMiddle"
                android:endColor="@color/BlueGradientEnd"
                android:angle="0"/>
            <corners android:radius="60dp"/>
            <padding android:left="0dp" android:top="0dp" android:right="0dp" android:bottom="0dp" />
        </shape>
    </item>
</selector>