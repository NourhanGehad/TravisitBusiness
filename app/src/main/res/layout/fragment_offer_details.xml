<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".vvm.destination.OfferDetailsFragment">
    <!-- Back Arrow -->
    <ImageView
        android:id="@+id/f_offer_details_iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:src="@drawable/ic_back"
        android:tint="@color/colorHeaderBlack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!-- Offer Details Header -->
    <TextView
        android:id="@+id/f_offer_details_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/segoeui_font"
        android:text="@string/offer_details_header"
        android:textColor="@color/colorHeaderBlack"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/f_offer_details_iv_back"
        app:layout_constraintTop_toTopOf="@id/f_offer_details_iv_back" />
    <!-- Options Icon -->
    <ImageView
        android:id="@+id/f_offer_details_iv_options"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="10dp"
        android:padding="10dp"
        android:src="@drawable/ic_options"
        app:layout_constraintBottom_toBottomOf="@id/f_offer_details_iv_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/f_offer_details_iv_back" />
    <!-- Offer Image 1-->
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/f_offer_details_sdv_1"
        android:layout_width="120dp"
        android:layout_height="170dp"
        android:layout_marginTop="20dp"
        app:actualImageResource="@drawable/img"
        app:actualImageScaleType="centerCrop"
        app:layout_constraintStart_toStartOf="@id/f_offer_details_tv_title"
        app:layout_constraintTop_toBottomOf="@id/f_offer_details_tv_title"
        app:roundedCornerRadius="16dp" />
    <!-- Offer Image 2-->
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/f_offer_details_sdv_2"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        app:actualImageResource="@drawable/img"
        app:actualImageScaleType="centerCrop"
        app:layout_constraintStart_toEndOf="@id/f_offer_details_sdv_1"
        app:layout_constraintTop_toTopOf="@id/f_offer_details_sdv_1"
        app:roundedCornerRadius="16dp" />
    <!-- Offer Image 3-->
    <com.facebook.drawee.view.SimpleDraweeView
    android:id="@+id/f_offer_details_sdv_3"
    android:layout_width="140dp"
    android:layout_height="80dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    app:actualImageResource="@drawable/img"
    app:actualImageScaleType="centerCrop"
    app:layout_constraintStart_toEndOf="@id/f_offer_details_sdv_1"
    app:layout_constraintTop_toBottomOf="@id/f_offer_details_sdv_2"
    app:roundedCornerRadius="16dp" />
    <!-- Share Icon -->
    <ImageView
        android:id="@+id/f_offer_details_iv_share"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:padding="5dp"
        android:visibility="invisible"
        android:src="@drawable/ic_share"
        app:layout_constraintEnd_toEndOf="@id/f_offer_details_iv_options"
        app:layout_constraintTop_toBottomOf="@id/f_offer_details_sdv_1"
        android:layout_marginTop="8dp"/>
    <!-- Favourite Icon -->
    <ImageView
        android:id="@+id/f_offer_details_iv_fav"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:visibility="gone"
        android:src="@drawable/ic_favourite"
        android:background="@drawable/ic_favourite_background"
        android:tint="@color/colorWhite"
        android:backgroundTint="@color/colorHeaderBlack"
        app:layout_constraintEnd_toStartOf="@id/f_offer_details_iv_share"
        app:layout_constraintTop_toBottomOf="@id/f_offer_details_sdv_1"
        android:layout_marginTop="8dp"/>
    <!-- Offer Availability -->
    <TextView
        android:id="@+id/f_offer_details_tv_availability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/segoeui_font"
        android:text="@string/offer_details_date"
        android:textColor="@color/colorValueGrey"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/f_offer_details_iv_back"
        app:layout_constraintTop_toBottomOf="@id/f_offer_details_iv_share" />
    <!-- Description Title -->
    <TextView
        android:id="@+id/f_offer_details_tv_description_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/segoeui_font"
        android:text="@string/description"
        android:layout_marginTop="15dp"
        android:textColor="@color/colorPlaceholderGrey"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/f_offer_details_iv_back"
        app:layout_constraintTop_toBottomOf="@id/f_offer_details_tv_availability" />
    <!-- Description -->
    <TextView
        android:id="@+id/f_offer_details_tv_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/f_offer_details_tv_title"
        app:layout_constraintEnd_toEndOf="@id/f_offer_details_iv_options"
        app:layout_constraintTop_toBottomOf="@id/f_offer_details_tv_description_title"
        android:text="@string/dummy_text"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorValueGrey"/>
    <!-- Tags Header -->
    <TextView
        android:id="@+id/f_offer_details_tv_tags"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/f_offer_details_tv_title"
        app:layout_constraintEnd_toEndOf="@id/f_offer_details_iv_options"
        app:layout_constraintTop_toBottomOf="@id/f_offer_details_tv_description"
        android:text="@string/tags"
        android:layout_marginTop="15dp"
        android:textColor="@color/colorCorduray"
        android:textSize="20sp"/>
    <!-- Tags RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/f_offer_details_rv_tags"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/f_offer_details_tv_tags"
        app:layout_constraintStart_toStartOf="@id/f_offer_details_tv_title"
        app:layout_constraintEnd_toEndOf="@id/f_offer_details_iv_options"
        tools:listitem="@layout/card_tag" />
    <!-- Comments Count -->
    <TextView
        android:id="@+id/f_offer_details_tv_comments_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/f_offer_details_iv_options"
        app:layout_constraintTop_toBottomOf="@id/f_offer_details_rv_tags"
        android:text="@string/random_number"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/colorCorduray"
        android:textSize="20sp"/>
    <!-- Comments Icon -->
    <ImageView
        android:id="@+id/f_offer_details_iv_comments"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/ic_comments"
        app:layout_constraintEnd_toStartOf="@id/f_offer_details_tv_comments_count"
        app:layout_constraintTop_toTopOf="@id/f_offer_details_tv_comments_count"
        app:layout_constraintBottom_toBottomOf="@id/f_offer_details_tv_comments_count"
        android:layout_marginTop="4dp"/>
    <!-- Rates Icon -->
    <ImageView
        android:id="@+id/f_offer_details_iv_rating"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/ic_large_star"
        app:layout_constraintStart_toStartOf="@id/f_offer_details_tv_title"
        app:layout_constraintTop_toTopOf="@id/f_offer_details_tv_comments_count"
        app:layout_constraintBottom_toBottomOf="@id/f_offer_details_tv_comments_count"
        android:layout_marginTop="8dp"/>
    <!-- Rate Average -->
    <TextView
        android:id="@+id/f_offer_details_tv_rates_average"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/f_offer_details_iv_rating"
        app:layout_constraintTop_toTopOf="@id/f_offer_details_iv_rating"
        app:layout_constraintBottom_toBottomOf="@id/f_offer_details_iv_rating"
        android:text="@string/random_rating"
        android:layout_marginStart="5dp"
        android:textColor="@color/colorRatingSaffron"
        android:textSize="20sp"/>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <include
            android:id="@+id/f_offer_details_comments"
            layout="@layout/bottom_sheet_comments" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>